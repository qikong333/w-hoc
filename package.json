{
    "name": "cms",
    "version": "0.0.2",
    "license": "ISC",
    "scripts": {
        "dev": "vite",
        "build:dev": "npm run lint:code && vite build --mode development",
        "build:kn": " vite build --mode kn --base=/arbalest/",
        "build:pro": " vite build --mode production --base=/arbalest/",
        "build": "vite build",
        "serve": "vite preview",
        "lint:code": "eslint --fix src/**/*.{js,ts,tsx,vue}",
        "lint:style": "stylelint --fix src/**/*.{vue,htm,html,css,sss,less,scss}",
        "commit": "git-cz",
        "postinstall": "husky install"
    },
    "dependencies": {
        "@types/node": "^18.0.0",
        "@types/qs": "^6.9.7",
        "ant-design-vue": "^3.2.12",
        "axios": "^0.24.0",
        "clipboard": "^2.0.8",
        "compression-webpack-plugin": "^9.0.1",
        "dotenv": "^16.0.1",
        "husky": "^8.0.1",
        "less": "^4.1.2",
        "less-loader": "^10.2.0",
        "marked": "^4.0.5",
        "mitt": "^3.0.0",
        "mockjs": "^1.1.0",
        "path": "^0.12.7",
        "pinia": "^2.0.21",
        "qs": "^6.10.3",
        "vite-plugin-markdown": "^2.0.2",
        "vite-plugin-pwa": "^0.11.7",
        "vue": "^3.2.16",
        "vue-i18n": "9",
        "vue-router": "^4.0.12",
        "vuex": "^4.0.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^15.0.0",
        "@commitlint/config-conventional": "^15.0.0",
        "@types/webpack-env": "^1.16.3",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "@vitejs/plugin-vue": "^1.9.3",
        "@vitejs/plugin-vue-jsx": "^1.3.0",
        "@vue/eslint-config-standard": "^6.1.0",
        "@vue/eslint-config-typescript": "^9.1.0",
        "babel-eslint": "^10.1.0",
        "commitizen": "^4.2.4",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.23.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-promise": "^5.1.1",
        "eslint-plugin-vue": "^8.1.1",
        "lint-staged": "^12.1.2",
        "prettier": "^2.5.0",
        "sass": "^1.43.5",
        "stylelint": "^14.1.0",
        "stylelint-config-rational-order": "^0.1.2",
        "stylelint-config-standard": "^24.0.0",
        "stylelint-order": "^5.0.0",
        "typescript": "^4.5.2",
        "unplugin-vue-components": "^0.17.2",
        "vite": "^2.6.4",
        "vite-plugin-style-import": "^1.4.0",
        "vite-plugin-windicss": "^1.5.1",
        "windicss": "^3.2.1"
    },
    "lint-staged": {
        "src/**/*.{js,ts,tsx,vue}": [
            "eslint --fix"
        ],
        "src/**/*.{vue,htm,html,css,sss,less,scss}": [
            "stylelint --fix"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
